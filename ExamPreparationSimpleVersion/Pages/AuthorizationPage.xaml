<Page x:Class="ExamPreparationSimpleVersion.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamPreparationSimpleVersion.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Авторизация" FontSize="40"/>
            <Label Content="Код подразделения" FontSize="20"/>
            <PasswordBox Style="{DynamicResource PasswordStyle}" x:Name="Password"/>
            <Button Style="{DynamicResource ButtonStyle}" x:Name="LogInButton" Content="Войти" Margin="0,10,0,0" Click="LogInButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
